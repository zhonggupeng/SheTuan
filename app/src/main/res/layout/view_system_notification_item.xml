<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="systemNotification"
            type="com.euswag.eu.bean.SystremNotification"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:paddingTop="5dp"
            android:paddingBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/corner_textview"
                android:text="@{systemNotification.sendtime}"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/min_font_size"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/system_notification"/>
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="wrap_content"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="14dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@{systemNotification.sender}"
                    android:textSize="@dimen/title_font_size"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:background="@color/blue2"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@{systemNotification.msg}"
                    android:textSize="@dimen/font_size"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:lines="1"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bottom_line"
                    android:background="@color/gray"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/system_notification_goto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="查看详情"
                        android:textSize="@dimen/font_size"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_goto" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"></LinearLayout>
    </LinearLayout>
</layout>